<%- include('template/cabecera', {tituloWeb: 'Pagina de mascotas'})  %>

   <div class="container">

        <h1>CRUD MongoDB</h1>

        <a
            class="btn btn-success btn-block my-4"
            href="/mascotas/crear"
        >
            Crear nueva mascota
        </a>
        
        <table class="table">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">nombre</th>
                <th scope="col">descripcion</th>
                <th scope="col">accion</th>
                </tr>
            </thead>
            <tbody>
                 <% if (arrayMascotas.length > 0) { %>
                    <% arrayMascotas.forEach(mascota => { %>
                        <tr>
                            <th scope="row"><%= mascota.id %></th>
                            <td><%= mascota.nombre %></td>
                            <td><%= mascota.descripcion %></td>
                            <td>
                                <a
                                    class="btn btn-warning btn-sm"
                                    href="mascotas/<%= mascota.id %>"
                                >
                                    Editar
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                 <% } %>
              
            </tbody>
        </table            >
   
   </div>

<%- include('template/footer')  %>